! Changes to this file are loaded with `xrdb -merge ~/.Xresources`

! Sensible defaults
XTerm.vt100.locale: false
XTerm.vt100.utf8: true
XTerm.vt100.scrollTtyOutput: false
XTerm.vt100.scrollKey: true
XTerm.vt100.bellIsUrgent: true
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.geometry: 80x40

! Styling
XTerm.vt100.faceName: Monospace
XTerm.vt100.boldMode: false
XTerm.vt100.faceSize: 10
XTerm.vt100.internalBorder: 4
XTerm.vt100.borderWidth: 0
XTerm.vt100.background: Gray10
XTerm.vt100.foreground: White
XTerm.vt100.cursorColor: Gray50

! Scroll bar
XTerm*scrollBar: true
XTerm*background: Gray10
XTerm*foreground: Gray50
XTerm*width: 8
XTerm*rightScrollBar: true
XTerm*multiScroll: true

